<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".UpdateEmail">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <EditText
        android:id="@+id/current_email"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:hint="Current email"
        android:background="@drawable/input"
        android:fontFamily="@font/cairo_regular"
        android:textColorHint="@color/white_gray"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/input"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/cairo_regular"
        android:textColorHint="@color/white_gray"
        android:inputType="textPersonName"
        android:hint="New email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_email" />

    <Button
        android:id="@+id/update_email"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="245dp"
        android:background="@drawable/button"
        android:fontFamily="@font/yanonekaffeesatz_regular"
        android:text="Update email"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>